{
  "name": "247calendar",
  "author": "Christian",
  "description": "A simple calendar app built with Electron, React, and Tailwind CSS.",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "main": "main.js",
  "build": {
    "appId": "com.christian.247calendar",
    "productName": "247Calendar",
    "directories": {
      "output": "build_output"
    },
    "files": [
      "dist/",
      "main.js",
      "preload.cjs"
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:3003 && electron-forge start\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "npm i && npm run build && electron-forge start",
    "package": "npm i && npm run build && electron-forge package",
    "make": "npm i && npm run build && electron-forge make",
    "dist": "npm i && npm run build && electron-builder --win nsis"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "dom-to-image-more": "^3.7.1",
    "electron-squirrel-startup": "^1.0.1",
    "html2canvas": "^1.4.1",
    "html2canvas-pro": "^1.5.11",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^37.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5"
  }
}